#include <stdio.h>
int main()
{
	int a = 10;//a在内存中要分配空间的 --4个字节
	printf("%p\n", &a); 	//%p专门用来打印地址
	
	int*pa = &a;//*解引用操作|*pa就是通过pa里边的地址找到a   (解引用可比喻为取值运算--取指针变量指向的值)
				//int说明pa指向的对象是int类型；整一句即是说：取a的地址放在pa中；
				//pa用来存放地址的，在C语言中pa叫指针变量
				//"*"用来说明 pa是指针变量
	
	char ch = 'w';
	char*pc = &ch;



	
	return 0;
}
